<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CommonApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DeepSkyBlue</item>
        <item name="colorPrimaryVariant">@color/DeepSkyBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/SkyBlue</item>
        <item name="colorSecondaryVariant">@color/SkyBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="DayColorPrimaryNightWhite">?attr/colorPrimary</item>
        <item name="DayColorPrimaryNightBlack80">?attr/colorPrimary</item>
        <item name="DayColorPrimaryNightBlack80Pressed">@color/LightSkyBlue</item>
        <item name="DayWhiteNightColorPrimaryDay">@color/white</item>
        <item name="DayWhiteNightBlack">@color/white</item>
        <item name="DayDefaultTextViewNightWhite">#606060</item>
        <item name="DayDefaultTextViewNightWhitePressed">#7C7C7C</item>
        <item name="DayWhiteNightDeepGray">@color/white</item>

        <item name="EditTextCursorColor">@color/DeepSkyBlue</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>

        <item name="FloatingActionButtonLabelBgColor">#72000000</item>
        <item name="FloatingActionButtonNormalColor">?attr/colorPrimary</item>
        <item name="FloatingActionButtonPressedColor">?attr/colorSecondary</item>
        <item name="RippleTransparentColor">#30808080</item>
        <item name="IconItemMe">#606060</item>
        <item name="DefaultTextViewColor">#606060</item>
        <item name="DefaultTextViewColorPressed">#919191</item>
        <item name="android:textColor">@color/color_default_textview</item>
        <item name="BgTestSelectItemColor">@color/white95</item>
        <item name="BgTestSelectItemColorPressed">@color/white90</item>
    </style>

    <style name="Theme.CommonApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashActivityTheme" parent="Theme.CommonApp.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="fab_menu_labels_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/fab_label_background</item>
    </style>
</resources>