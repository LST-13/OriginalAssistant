<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CommonApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/DeepGray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DeepSkyBlue</item>
        <item name="colorSecondaryVariant">@color/SkyBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="DayColorPrimaryNightWhite">@color/white</item>
        <item name="DayColorPrimaryNightBlack80">@color/black91</item>
        <item name="DayColorPrimaryNightBlack80Pressed">@color/black87</item>
        <item name="DayWhiteNightColorPrimaryDay">@color/DeepSkyBlue</item>
        <item name="DayWhiteNightBlack">@color/black</item>
        <item name="DayDefaultTextViewNightWhite">@color/white</item>
        <item name="DayDefaultTextViewNightWhitePressed">#DDDDDD</item>
        <item name="DayWhiteNightDeepGray">@color/DeepGray</item>

        <item name="EditTextCursorColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>

        <item name="FloatingActionButtonLabelBgColor">#28ffffff</item>
        <item name="FloatingActionButtonNormalColor">#444444</item>
        <item name="FloatingActionButtonPressedColor">#222222</item>
        <item name="RippleTransparentColor">#21F5F5F5</item>
        <item name="IconItemMe">#888888</item>
        <item name="DefaultTextViewColor">#b8b8b8</item>
        <item name="DefaultTextViewColorPressed">#EAEAEA</item>
        <item name="android:textColor">@color/color_default_textview</item>
        <item name="BgTestSelectItemColor">@color/black91</item>
        <item name="BgTestSelectItemColorPressed">@color/black87</item>
    </style>

    <style name="Theme.CommonApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="LightAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
    </style>
</resources>